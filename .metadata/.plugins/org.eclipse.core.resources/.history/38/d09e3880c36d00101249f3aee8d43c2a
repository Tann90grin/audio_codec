#include <stm32f4xx_hal.h>
#include <stm32f4xx_ll_dma.h>
#include <stddef.h>
#include <stdio.h>

#define I2C_ADDRESS 0x1A

typedef union
{
    struct{
        uint16_t data : 9;
        uint16_t addr : 7;
    }bits;
    uint8_t ctrl_word[2];
}CTRL_WORD;


class wm8731
{
	public:
		wm8731(I2C_HandleTypeDef *hi2c);

	private:
		uint8_t wm8731_cmd(uint8_t addr, CTRL_WORD cw);

		I2C_HandleTypeDef *hi2c;


};
